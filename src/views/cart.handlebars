<div class="container mt-4">
  <h3 class="mb-4">Tu carrito</h3>
  <a href="/">⬅</a>
  {{#each cart.products}}
    <div class="card mb-3 shadow-sm">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="card-title mb-1">{{this.product.title}}</h5>
          <p class="card-text mb-0">${{this.product.price}}
            x
            {{this.quantity}}</p>
        </div>
        <span class="badge bg-primary fs-5">
          $
        </span>
      </div>
    </div>
  {{/each}}

  {{#if cart.products.length}}
    <div class="d-grid mt-4">
      <button id="finalizarCompra" class="btn btn-success btn-lg">
        Finalizar compra 🛒
      </button>
    </div>
  {{else}}
    <p class="text-center text-muted mt-4">Carrito vacío 🛍️</p>
  {{/if}}
</div>

<script src="/js/finalizarCompra.js" type="module"></script>