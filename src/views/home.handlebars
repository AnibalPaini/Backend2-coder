<div class="container mt-4">
  <h1 class="text-center mb-4">Home</h1>
  <h2 class="text-center">Productos</h2>

  <div class="row justify-content-center">
    <p>Ya tienes cuenta?<a href="/users/login">Logeate!</a></p>
    <p>No tienes cuenta?<a href="/users/register">Registrate!</a></p>
    {{#each docs}}
      <div class="col-md-4 mt-1">
        <div class="card shadow-sm mb-4 h-100">
          <div class="card-body text-center">
            <h5 class="card-title fw-bold">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="text-primary fs-5 fw-bold">${{this.price}}</p>
            <a
              class="btn btn-outline-secondary"
              href="/products/{{this._id}}"
            >Ver detalles</a>
            <a
              class="btn btn-outline-primary add-cart"
              data-id="{{this._id}}"
            >Agregar al carrito</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Paginación -->
  <div class="d-flex justify-content-center align-items-center mt-4">
    {{#if hasPrevPage}}
      <a href="/?page={{prevPage}}" class="btn btn-outline-primary me-3">◀
        Anterior</a>
    {{/if}}

    <p class="fw-bold mb-0">Página {{page}} de {{totalPages}}</p>

    {{#if hasNextPage}}
      <a
        href="/?page={{nextPage}}"
        class="btn btn-outline-primary ms-3"
      >Siguiente ▶</a>
    {{/if}}
  </div>
</div>

<script src="/js/products.js"></script>